{
  "analysis": {
    "maxFiles": 10,
    "batchSize": 3,
    "includeContent": false,
    "language": "en",
    "cacheEnabled": true,
    "cacheTTL": 300000
  },
  "search": {
    "maxKeywords": 10,
    "relevanceThreshold": 0.2,
    "fileExtensions": [".ts", ".js", ".tsx", ".jsx", ".py", ".java", ".go", ".rs", ".cpp", ".c", ".h", ".cs", ".php", ".rb", ".md", ".json", ".yaml", ".yml", ".toml", ".ini", ".cfg", ".conf"],
    "ignoreDirs": ["node_modules", "dist", "build", ".git", ".next", ".nuxt", "coverage", "target", "bin", "obj", ".vscode", ".idea", "vendor", "__pycache__", ".pytest_cache", ".mypy_cache"]
  },
  "llm": {
    "model": "gpt-4o-mini",
    "temperature": 0.3,
    "maxTokens": 4000,
    "timeout": 30000,
    "retries": 2
  },
  "github": {
    "uploadByDefault": false,
    "commentTemplate": "## ðŸ¤– AI Analysis Report\n\n{content}\n\n---\n*Generated by AutoDev GitHub Agent*"
  },
  "output": {
    "verbose": false,
    "showProgress": true,
    "colorOutput": true,
    "logLevel": "info"
  }
}
